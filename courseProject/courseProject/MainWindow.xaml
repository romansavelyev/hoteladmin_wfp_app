<Window x:Class="courseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="Grid1">
        <ListView Name="ListViewHotelRoom" Margin="4,20,40,100" ItemTemplate="{DynamicResource HotelTemplate}" ItemsSource="{Binding Path=Table}">
            <ListView.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Gray" Offset="0"/>
                </LinearGradientBrush>
            </ListView.Background>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Path=id}"/>
                    <GridViewColumn Header="RoomClass" DisplayMemberBinding="{Binding Path=roomclass}"/>
                    <GridViewColumn Header="AmountOfPeople" DisplayMemberBinding="{Binding Path=amountofpeople}"/>
                    <GridViewColumn Header="priceforroom" DisplayMemberBinding="{Binding Path=priceforroom}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
