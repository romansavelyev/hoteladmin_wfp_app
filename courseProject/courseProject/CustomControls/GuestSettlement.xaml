                        <ComboBoxItem HorizontalAlignment="Center">Group of Clients</ComboBoxItem>
                        <ComboBoxItem HorizontalAlignment="Center">Family</ComboBoxItem>
                    </ComboBox>
                    <Label x:Name="clientSettle_ClientType_Label" Content="Client type:" HorizontalAlignment="Left" Margin="0,198,0,0" VerticalAlignment="Top" Height="26" Width="90" Grid.Column="1"/>
