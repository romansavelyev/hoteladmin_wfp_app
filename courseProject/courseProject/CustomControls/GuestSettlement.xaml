                        <Separator.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90.088"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Separator.RenderTransform>
                    </Separator>
                    <CheckBox x:Name="clientSettle_Pet_CheckBox" Content="Pet" Grid.Column="1" HorizontalAlignment="Left" Margin="262,40,0,0" VerticalAlignment="Top" Height="15" Width="37" IsEnabled="False"/>
                    <CheckBox x:Name="clientSettle_Childrens_CheckBox" Content="Childrens" Grid.Column="1" HorizontalAlignment="Left" Margin="404,40,0,0" VerticalAlignment="Top" Height="15" Width="69" IsEnabled="False"/>
