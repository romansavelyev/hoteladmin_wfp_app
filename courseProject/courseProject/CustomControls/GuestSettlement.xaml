                    <TextBox x:Name="roomSettle_PriceForRoom_TextBox" HorizontalAlignment="Left" Height="23" Margin="11,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" RenderTransformOrigin="0.5,-0.486"/>
                    <Label x:Name="roomSettle_RoomType_Label" Content="Room Type:" HorizontalAlignment="Left" Margin="11,153,0,0" VerticalAlignment="Top" Height="26" Width="74"/>
                    <ComboBox x:Name="roomSettle_RoomType_ComboBox" HorizontalAlignment="Left" Margin="11,179,0,0" VerticalAlignment="Top" Width="146" Height="22">
