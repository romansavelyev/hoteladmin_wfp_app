                    <TextBox x:Name="clientSettle_CheckInDate_TextBox" HorizontalAlignment="Left" Height="23" Margin="6,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    <TextBox x:Name="clientSettle_CheckOutDate_TextBox" HorizontalAlignment="Left" Height="23" Margin="6,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

                </Grid>
