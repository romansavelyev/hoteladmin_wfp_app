                        </Separator.RenderTransform>
                    </Separator>
                    <Separator Grid.Column="1" HorizontalAlignment="Left" Height="37" Margin="10,171,0,0" VerticalAlignment="Top" Width="100"/>
                    <Label x:Name="roomSettle_NumOfRooms_Label" Content="Number of rooms:" HorizontalAlignment="Left" Margin="0,216,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="110"/>
