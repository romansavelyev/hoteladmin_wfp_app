                    <TextBox x:Name="clientSettle_NumberOfChildren_TextBox" HorizontalAlignment="Left" Height="23" Margin="377,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" IsEnabled="False"/>
                    <Separator HorizontalAlignment="Left" Height="22" Margin="219,147,0,0" VerticalAlignment="Top" Width="273" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                        <Separator.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90.088"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Separator.RenderTransform>
                    </Separator>
                    <TextBox x:Name="clientSettle_NumberOfPeople_TextBox" HorizontalAlignment="Left" Height="23" Margin="222,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" IsEnabled="False"/>
                    <Separator Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="222,55,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button Grid.ColumnSpan="2" Content="Choose " HorizontalAlignment="Left" Margin="129,224,0,0" VerticalAlignment="Top" Width="73" Height="22" Click="Button_Click_1"/>
                    <Button x:Name="clientSettle_GroupOfClients_Button" Content="Insert GroupOfClients" HorizontalAlignment="Left" Margin="30,59,0,0" VerticalAlignment="Top" Width="164" Height="37" Grid.Column="2" Click="clientSettle_GroupOfClients_Button_Click" IsEnabled="False"/>
