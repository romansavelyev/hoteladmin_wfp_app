                    <TextBox x:Name="clientSettle_PassportDat_TextBox" HorizontalAlignment="Left" Height="23" Margin="4,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    <Label x:Name="clientSettle_RoomNumber_Label" Content="Room number:" HorizontalAlignment="Left" Margin="0,149,0,0" VerticalAlignment="Top" Height="26" Width="90" Grid.Column="1"/>
